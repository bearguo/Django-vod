version: '3.3'

services:
  vod_db:
    image: mysql:5.7
    volumes:
      - "/home/share/vod_db:/var/lib/mysql"
    environment:
      MYSQL_ROOT_PASSWORD: 123
    restart: always
    ports:
      - 3306:3306

  vod:
    depends_on:
      - vod_db
    image: vod:min
    volumes:
      - /home/share/vod/media:/app/media
      - /home/share/vod/static:/app/static
      - /home/share/vod/logs:/app/logs
      - /media/tongshi:/media/tongshi
    restart: always
    ports:
      - 8000:8000
